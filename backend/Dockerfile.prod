FROM golang:1.21-alpine

WORKDIR /app

# 必要なパッケージのインストール
RUN apk add --no-cache \
    git \
    postgresql-client

# 依存関係のコピーとダウンロード
COPY go.mod go.sum ./
RUN go mod download

# ソースコードのコピー
COPY . .

# アプリケーションのビルド
RUN go build -o main ./cmd/api/main.go

# ポートの公開
EXPOSE 8000

# アプリケーションの実行
CMD ["./main"] 